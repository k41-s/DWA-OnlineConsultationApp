@model List<WebApp.ViewModels.MentorViewModel>

@{
    ViewData["Title"] = "Mentors List";
    var name = ViewData["CurrentSearch"] as string;
    var typeOfWorkId = ViewData["CurrentTypeOfWorkId"] as int?;
    var typeOfWorkList = ViewData["TypeOfWorkList"] as SelectList;
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
}

<h2>@ViewData["Title"]</h2>

<div class="btn-group mb-3" role="group" aria-label="Mentor CRUD navigation">
    <a asp-action="Create" class="btn btn-success">Add New Mentor</a>
</div>

<form method="get" asp-action="Index" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="name" value="@name" class="form-control" placeholder="Search by name" />
    </div>
    <div class="col-md-4">
        <select name="typeOfWorkId" class="form-select">
            <option value="0">-- All Types of Work --</option>
            @foreach (var type in typeOfWorkList)
            {
                <option value="@type.Value" selected="@(type.Value == typeOfWorkId?.ToString() ? "selected" : null)">
                    @type.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Type of Work</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mentor in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(mentor.ImagePath))
                    {
                        <img src="@Url.Content(mentor.ImagePath)" alt="Mentor Image" style="height: 60px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>@mentor.Name</td>
                <td>@mentor.Surname</td>
                <td>@mentor.TypeOfWorkName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@mentor.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@mentor.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="Details" asp-route-id="@mentor.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-searchName="@name"
               asp-route-typeOfWorkId="@typeOfWorkId"
               asp-route-page="@(currentPage - 1)">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @currentPage of @totalPages</span>
        </li>
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-searchName="@name"
               asp-route-typeOfWorkId="@typeOfWorkId"
               asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
