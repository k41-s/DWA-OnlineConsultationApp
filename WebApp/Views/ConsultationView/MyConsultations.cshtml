@model List<WebApp.ViewModels.MyConsultationViewModel>

@{
    ViewData["Title"] = "My Consultations";
}

<h2 class="mb-4">My Booked Consultations</h2>

@if (!Model.Any())
{
    <p>You haven't booked any consultations yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var consultation in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(consultation.MentorImagePath))
                    {
                        <img src="@consultation.MentorImagePath" class="card-img-top" style="max-height: 200px; object-fit: cover;" alt="Mentor Image" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@consultation.MentorName @consultation.MentorSurname</h5>
                        <p class="card-text"><strong>Requested:</strong> @consultation.RequestedAt.ToString("f")</p>
                        <p class="card-text"><strong>Status:</strong> @consultation.Status</p>
                        @if (!string.IsNullOrWhiteSpace(consultation.Notes))
                        {
                            <p class="card-text"><strong>Notes:</strong> @consultation.Notes</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
